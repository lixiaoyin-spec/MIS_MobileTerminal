<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootapp.repository.CommentRepository">

    <!-- 按帖子ID查询评论列表（关联用户表获取昵称） -->
    <select id="selectByPostId" resultType="com.example.springbootapp.po.Comment">
        SELECT c.id, c.post_id, c.user_id, c.content, c.create_time
        FROM comment c
        WHERE c.post_id = #{postId}
        ORDER BY c.create_time ASC
    </select>

</mapper>

